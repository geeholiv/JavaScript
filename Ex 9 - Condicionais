<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EX 9</title>
</head>
<body>
    <script>
        let dia = prompt("Digite o nome de um dia da semana:").toLowerCase();
        
        if (dia === "sábado" || dia === "domingo") {
            document.write("Fim de semana");
        } else if (
            dia === "segunda" || dia === "terça" || dia === "quarta" ||
            dia === "quinta" || dia === "sexta"
        ) {
           document.write("Dia útil");
        } else {
            document.write("Dia inválido");
        }
    </script>
    
</body>
</html>
