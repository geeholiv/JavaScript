<body>
    <script>
        let temperatura = parseFloat(prompt("Digite a temperatura:"));
        if (temperatura < 18) {
            document.write("Está frio.");
        } else if (temperatura <= 25) {
            document.write("Temperatura agradável.");
        } else {
            document.write("Está quente.");
        }
    </script>
    
</body>
