<body>
    <script>
        let idade = parseInt(prompt("Digite sua idade:"));
        let preco = 100; 
        
        if (idade <= 12) {
            desconto = 0.5; 
        } else if (idade >= 60) {
            desconto = 0.3; 
        } else {
            desconto = 0; 
        }
        let precoFinal = preco - (preco * desconto);
        document.write("Pre√ßo final com desconto: R$ " + precoFinal.toFixed(2));

    </script>
    
</body>
