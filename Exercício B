<body>
    <script>
        //lê os dados de entrada
        let conta = Number(prompt("Valor da conta R$: "));
        let clientes = Number(prompt("Número de clientes: "));
        //calcular valor da conta por cliente
        let divisao = conta / clientes;
        //exibir resultado
        alert("Valor da conta R$: " + conta.toFixed(2)+ "\nNúmero de clientes: " + clientes+ "\nValor por cliente R$: " + divisao.toFixed(2));
    </script>
    
</body>
</html>
