<body>
    <script>
        let valorDolar = parseFloat(prompt("Digite o valor em dólar (US$):"));
        let cotacao = parseFloat(prompt("Digite a cotação atual do dólar (R$):"));

        let valorReal = valorDolar * cotacao;

        alert("O valor em real é: R$ " + valorReal.toFixed(2));
    </script>
    
