    <script>
        let salario = Number(prompt("Salário inicial: R$ "));

        let aumento = salario * 1.15;
        let imposto =  aumento * 0.92;

        alert("Salário inicial: R$ " + salario.toFixed(2) + "\nNovo salário com 15% de aumento: R$ " + aumento.toFixed(2) + "\nSalário final: R$ " + imposto.toFixed(2));
    </script>
    
