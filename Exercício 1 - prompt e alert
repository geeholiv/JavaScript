<body>
    <script>
        let precolitro = Number(prompt("Preço do litro da gasolina R$: "));
        let pagamento = Number(prompt("Valor do pagamento R$: "));

        let divisao = pagamento / precolitro;

        alert("Preço do litro da gasolina R$: " + precolitro.toFixed(2) + "\nValor do pagamento: " + pagamento.toFixed(2) + "\nLitros de abastecimento: " + divisao);
    </script>
    
</body>
